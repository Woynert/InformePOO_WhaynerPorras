<Window x:Class="BlackJack.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="Game" Height="582" Width="1037.833">
    <Grid x:Name="grdMaster">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF82CF43"/>
                <GradientStop Color="#FF367E2C" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnPedir" Content="Pedir" Margin="0,0,89,10" Click="btnPedir_Click" HorizontalAlignment="Right" Width="74" Height="24" VerticalAlignment="Bottom"/>
        <Button Name="btnPlantar" Content="Plantarse" Margin="0,0,10,10" Click="btnPlantar_Click" HorizontalAlignment="Right" Width="74" Height="24" VerticalAlignment="Bottom"/>
        <Grid Name="grdTest" Margin="-154,114,1053,240">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle x:Name="rctTest" HorizontalAlignment="Left" Width="121" Stroke="#FFCFCFCF" RadiusX="10" RadiusY="10" StrokeThickness="3" Grid.ColumnSpan="2" Margin="0,0,0,-56" Height="189" VerticalAlignment="Top">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Resources/rect1678-5-1.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Image x:Name="imgImage" HorizontalAlignment="Left" Height="89" Margin="16,60,0,0" VerticalAlignment="Top" Width="89" Source="Resources/Dimante.png" Grid.ColumnSpan="2"/>
            <Label Content="11" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#00000000" Foreground="Red" FontFamily="Source Sans Pro" FontSize="40" Grid.ColumnSpan="2"/>
        </Grid>
        <Image x:Name="imgImagePlace" HorizontalAlignment="Left" Height="46" Margin="-88,48,0,0" VerticalAlignment="Top" Width="46" Source="Resources/Dimante.png"/>
    </Grid>
</Window>
